<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="12dp"
    tools:context=".TimeAndDateFragment">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint = "Please Enter a Start Date"
        android:id = "@+id/Start_Date"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint = "Please Enter a End Date"
        android:id = "@+id/End_Date"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint = "Please Enter a Start Time"
        android:id = "@+id/Start_Time"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint = "Please Enter a End Time"
        android:id = "@+id/End_Time"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = " go to TimeAndDateFragment"
        android:id = "@+id/btnPriceDetailsFragment"
        />

</LinearLayout>